{
  "$schema": "https://schema.zeabur.app/template.json",
  "name": "n8n-custom",
  "description": "Custom n8n with AI Builder support",
  "build": {
    "type": "dockerfile",
    "dockerfile": "Dockerfile.zeabur"
  },
  "ports": [5678],
  "env": {
    "N8N_HOST": {
      "default": "0.0.0.0"
    },
    "N8N_PORT": {
      "default": "5678"
    },
    "N8N_PROTOCOL": {
      "default": "https"
    },
    "NODE_ENV": {
      "default": "production"
    },
    "N8N_AI_ENABLED": {
      "default": "true"
    },
    "N8N_AI_ANTHROPIC_KEY": {
      "required": true,
      "description": "Your AI API Key"
    },
    "N8N_AI_ASSISTANT_BASE_URL": {
      "required": true,
      "description": "AI API Base URL (e.g., https://api.anthropic.com)"
    },
    "N8N_AI_MODEL_NAME": {
      "default": "claude-sonnet-4-5-20250929",
      "description": "Model name to use"
    },
    "N8N_AI_PROVIDER": {
      "default": "anthropic",
      "description": "Provider type: anthropic or openai"
    }
  },
  "volumes": [
    {
      "id": "n8n-data",
      "dir": "/home/node/.n8n"
    }
  ]
}
